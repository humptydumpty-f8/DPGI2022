<Window x:Class="DPGI_Lec2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPGI_Lec2"
        mc:Ignorable="d"     
        Title="Lection #2" Height="350" Width="600"  >
    <!--В локальному просторі імен DPGI_Lec2 створений клас Person-->
    <Grid>
        <!--Додаємо елемент ListBox -->
        <ListBox x:Name="personList">
            <TextBox FontWeight="Bold">Person list</TextBox>
            <!--Додаємо в список три обєкти типу Person-->
            <ListBoxItem>
                <local:Person Name="Bender O." Age="33"/>
            </ListBoxItem>
            <ListBoxItem>
                <local:Person Name="Panikovskiy E." Age="53"/>
            </ListBoxItem>
            <ListBoxItem>
                <local:Person Name="Balaganov A." Age="28"/>
            </ListBoxItem>
            <Button x:Name="btnOk" Width="100" Click="btnOk_Click">Ok</Button>
        </ListBox>

    </Grid>
</Window>
